@model List<FinalBachelorNeer.Models.Approvedproperty>
@{
    Layout = null;
}
<head>

    <link rel="icon" href="../Design/img/favicon.png" type="image">
    <title>BachelorNeer</title>

    <link rel="stylesheet" href="~/Content/CSS/stylesfor.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" rel="stylesheet">


</head>
<body>
    <div class="login-header box-shadow">
        <div class="container-fluid d-flex justify-content-between align-items-center" style="background-color:Highlight">
            <a onclick="location.href='@Url.Action("Index","Home")'">
                <div class="navbar-brand aa-logo">
                    <h4>Bachelor Neer</h4>
                </div>
            </a>

        </div>
    </div>


    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                    <span class="font-weight-bold">@Session["uName"]</span>
                    <span class="text-black-50">@Session["users"]</span>
                    <span> </span>
                    <br />
                    <br />
                    <button class="btn btn-primary profile-button" onclick="location.href='@Url.Action("BeforeLogin","Home")'" type="button">Log Out</button>
                </div>
            </div>
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Edit Approval Properties</h4>
                    </div>
                    @foreach (var uinfo in Model)
                    {
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Property ID</label><input type="text" class="form-control" placeholder="Property ID" value="@uinfo.ap_Id" readonly></div>

                </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Name</label><input type="text" class="form-control" placeholder="Name" value="@uinfo.ap_Name"></div>
                        <div class="col-md-12"><label class="labels">Email</label><input type="email" class="form-control" value="@uinfo.ap_Email" placeholder="Email"></div>

                        <div class="col-md-12"><label class="labels">Mobile Number</label><input type="text" class="form-control" placeholder="Phone number" value="@uinfo.ap_Number"></div>
                        <div class="col-md-12"><label class="labels">Type</label><input type="text" class="form-control" placeholder="Property Type" value="@uinfo.ap_Type"></div>
                        <div class="col-md-12"><label class="labels">Address</label><input type="text" class="form-control" placeholder="Address" value="@uinfo.ap_Proaddress"></div>
                        <div class="col-md-12"><label class="labels">Thana</label><input type="text" class="form-control" placeholder="Thana" value="@uinfo.ap_Thana"></div>
                        <div class="col-md-12"><label class="labels">Image</label><input type="file" class="form-control" placeholder="Image" value="@uinfo.ap_Imfile"></div>
                        <div class="col-md-12"><label class="labels">Rent</label><input type="text" class="form-control" placeholder="Rent" value=""></div>
                        <div class="col-md-12"><label class="labels">Bed</label><input type="text" class="form-control" placeholder="Bed" value=""></div>
                        <div class="col-md-12"><label class="labels">Bath</label><input type="text" class="form-control" placeholder="Bathroom" value=""></div>
                        <div class="col-md-12"><label class="labels">Kitchen</label><input type="text" class="form-control" placeholder="Kitchen" value=""></div>

                        <div class="col-md-12"><label class="labels">Belcony</label><input type="text" class="form-control" placeholder="Belcony" value=""></div>
                        <div class="col-md-12"><label class="labels">Dinnig</label><input type="text" class="form-control" placeholder="Dinning" value=""></div>
                    </div>
                    }

                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="button">Upadate</button></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 py-5">



                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Number</th>
                                <th scope="col">Type</th>
                                <th scope="col">Address</th>
                                <th scope="col">Thana</th>
                                <th scope="col">Image</th>

                            </tr>
                        </thead>


                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Mark</td>
                                <td>Otto</td>
                                <td>mdo</td>
                                <td><span class="badge badge-primary">Primary</span></td>
                            </tr>


                        </tbody>
                    </table>











                </div>
            </div>
        </div>
    </div>
</body>

