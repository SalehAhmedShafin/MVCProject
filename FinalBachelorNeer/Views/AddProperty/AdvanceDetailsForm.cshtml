@model List<FinalBachelorNeer.Models.userinfo>


@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />

    <link rel="icon" href="../Design/img/favicon.png" type="image">
    <title>BachelorNeer</title>

    <!-- Mobile Specific Metas -->
    <meta name="viewport"
          content="width=device-width, initial-scale=1, maximum-scale=1" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
          rel="stylesheet" />
    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="../Helper/vendors/styles/core.css" />
    <link rel="stylesheet"
          type="text/css"
          href="../Helper/vendors/styles/icon-font.min.css" />
    <link rel="stylesheet"
          type="text/css"
          href="../Helper/src/plugins/jquery-steps/jquery.steps.css" />
    <link rel="stylesheet" type="text/css" href="../Helper/vendors/styles/style.css" />


</head>

<body class="login-page">
    <div class="login-header box-shadow">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a onclick="location.href='@Url.Action("Index","Home")'">
                <div class="navbar-brand aa-logo">
                    <h4>Bachelor Neer</h4>
                </div>
            </a>
            <div class="login-menu">
                <ul>
                    <li><h4>Add Your Property With Details</h4></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="register-page-wrap d-flex align-items-center flex-wrap justify-content-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 col-lg-7">
                    <img src="../Helper/vendors/images/newpro.png" alt="" />
                </div>
                <div class="col-md-6 col-lg-5">
                    <div class="register-box bg-white box-shadow border-radius-10">
                        <div class="wizard-content">



                            <form class="tab-wizard2 wizard-circle wizard" action="/AddProperty/AdvanceDetailsForm" method="post">
                                <h5>Personal Information</h5>
                                <section>
                                    @foreach (var uinfo in Model)
                                    {
                                        <div class="form-wrap max-width-600 mx-auto">
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Name*</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" required="required" aria-required="true" value="@uinfo.u_Name" name="up_Name" readonly/>
                                                </div>
                                            </div>


                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Email Address*</label>
                                                <div class="col-sm-8">
                                                    <input type="email" class="form-control" required="required" aria-required="true" value="@uinfo.u_Email" name="up_Email" readonly />
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Contact Number*</label>
                                                <div class="col-sm-8">
                                                    <input type="Text" class="form-control" required="required" aria-required="true" value="@uinfo.u_Number" name="up_Number" readonly/>
                                                </div>
                                            </div>
                                            


                                            <div class="form-group row">


                                                @ViewBag.ConError

                                            </div>

                                        </div>
                                    }

                                    </section>
                                    <!-- Step 2 -->
                                    <h5>Property Information</h5>
                                    <section>
                                        <div class="form-wrap max-width-600 mx-auto">
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Property Type*</label>
                                                <div class="col-sm-8">
                                                    <select class="form-control selectpicker"
                                                            title="Select Card Type" name="up_Type">
                                                        <option value="1">Flat</option>
                                                        <option value="2">Single Room</option>
                                                        <option value="3">Double Room</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Address*</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" placeholder="ex. Kolabagan 2 no. Road, Dhanmondi" required="required" aria-required="true" value="" name="up_Proaddress" />
                                                </div>
                                            </div>


                                            @*<label class="col-sm-4 col-form-label">Gender*</label>
                                                <div class="col-sm-8">
                                                    <div class="custom-control custom-radio custom-control-inline pb-0">
                                                        <input type="radio"
                                                               id="male"
                                                               name="gender"
                                                               class="custom-control-input" />
                                                        <label class="custom-control-label" for="male">Male</label>
                                                    </div>
                                                    <div class="custom-control custom-radio custom-control-inline pb-0">
                                                        <input type="radio"
                                                               id="female"
                                                               name="gender"
                                                               class="custom-control-input" />
                                                        <label class="custom-control-label" for="female">Female</label>
                                                    </div>
                                                </div>*@

                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">City-Thana*</label>
                                                <div class="col-sm-8">
                                                    <select class="form-control selectpicker"
                                                            title="Select Thana" name="up_Thana">
                                                        <option value="1">Dhanmoni</option>
                                                        <option value="2">Mohakhali</option>
                                                        <option value="3">Gulshan</option>
                                                        <option value="3">Uttara</option>
                                                    </select>
                                                </div>
                                            </div>



                                        </div>
                                    </section>
                                    <!-- Step 3 -->
                                    <h5>More info & Status</h5>
                                    <section>
                                        <div class="form-wrap max-width-600 mx-auto">



                                            <div class="form-group row align-items-center">
                                                <label class="col-sm-4 col-form-label">Property Image*</label>
                                                <div class="col-sm-8">
                                                    <input type="file" class="form-control" required="required" aria-required="true" value="" name="up_Imfile" />
                                                </div>
                                            </div>



                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Upload Date*</label>
                                                <div class="col-sm-8">
                                                    <div class="row">

                                                        <div class="col-6">
                                                            <select class="form-control selectpicker"
                                                                    title="Day"
                                                                    data-size="5" name="up_Date">
                                                                <option>1</option>
                                                                <option>2</option>
                                                                <option>3</option>
                                                                <option>4</option>
                                                                <option>5</option>
                                                                <option>6</option>
                                                                <option>7</option>
                                                                <option>8</option>
                                                                <option>9</option>
                                                                <option>10</option>
                                                                <option>11</option>
                                                                <option>12</option>
                                                            </select>
                                                        </div>

                                                        <div class="col-6">
                                                            <select class="form-control selectpicker"
                                                                    title="Month"
                                                                    data-size="5" name="up_Month">
                                                                <option value="01">January</option>
                                                                <option value="02">February</option>
                                                                <option value="03">March</option>
                                                                <option value="04">April</option>
                                                                <option value="05">May</option>
                                                                <option value="06">June</option>
                                                                <option value="07">July</option>
                                                                <option value="08">August</option>
                                                                <option value="09">September</option>
                                                                <option value="10">October</option>
                                                                <option value="11">November</option>
                                                                <option value="12">December</option>
                                                            </select>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>



                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Status-Not required</label>
                                                <div class="col-5">
                                                    <input type="text"  class="form-control" value="Pending" required="required" aria-required="true" name="up_Status" readonly />
                                                </div>
                                            </div>





                                        </div>
                                    </section>




                                    <button type="button"
                                            id="success-modal-btn"
                                            hidden
                                            data-toggle="modal"
                                            data-target="#success-modal"
                                            data-backdrop="static">
                                        Launch modal
                                    </button>
                                    <div class="modal fade"
                                         id="success-modal"
                                         tabindex="-1"
                                         role="dialog"
                                         aria-labelledby="exampleModalCenterTitle"
                                         aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered max-width-400"
                                             role="document">
                                            <div class="modal-content">
                                                <div class="modal-body text-center font-18">
                                                    <h3 class="mb-20">Read Carefully!</h3>
                                                    <div class="mb-30 text-center">
                                                        <img src="../Helper/vendors/images/success.png" />
                                                    </div>
                                                    All the responsibilities about your properties goes to you.So, we are not reposibile about payment.<br />
                                                    So, After accept your request please provide other information about your property<br />
                                                    Finally, After three month your property will automatic delete from this site<br />
                                                    Do you agree this condition?
                                                </div>
                                                <div class="modal-footer justify-content-lg-center">
                                                    <button type="submit" name="Submit" class="btn btn-primary">Yes</button>
                                                </div>
                                                <div class="modal-footer justify-content-lg-center">
                                                    <a onclick="location.href='@Url.Action("Index","Home")'" class="btn btn-primary">No</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>




                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- success Popup html Start -->
        <!-- success Popup html End -->
        <!-- welcome modal end -->
        <!-- js -->
        <script src="../Helper/vendors/scripts/core.js"></script>
        <script src="../Helper/vendors/scripts/script.min.js"></script>
        <script src="../Helper/vendors/scripts/process.js"></script>
        <script src="../Helper/vendors/scripts/layout-settings.js"></script>
        <script src="../Helper/src/plugins/jquery-steps/jquery.steps.js"></script>
        <script src="../Helper/vendors/scripts/steps-setting.js"></script>

    </body>
</html>


