
@{
    Layout = null;
}
@model FinalBachelorNeer.Models.PropertyDetail

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BachelorNeer</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="../Design/img/favicon.ico" type="image/x-icon">

    <!-- Font awesome -->
    <link href="../Design/css/font-awesome.css" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="../Design/css/bootstrap.css" rel="stylesheet">
    <!-- slick slider -->
    <link rel="stylesheet" type="text/css" href="../Design/css/slick.css">
    <!-- price picker slider -->
    <link rel="stylesheet" type="text/css" href="../Design/css/nouislider.css">
    <!-- Fancybox slider -->
    <link rel="stylesheet" href="../Design/css/jquery.fancybox.css" type="text/css" media="screen" />
    <!-- Theme color -->
    <link id="switcher" href="../Design/css/theme-color/default-theme.css" rel="stylesheet">

    <!-- Main style sheet -->
    <link href="../Design/css/style.css" rel="stylesheet">


    <!-- Google Font -->
    <link href='https://fonts.googleapis.com/css?family=Vollkorn' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <section id="aa-signin">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="aa-signin-area">
                        <div class="aa-signin-form">
                            <div class="aa-signin-form-title">
                                <a class="aa-property-home" onclick="location.href='@Url.Action("Index","Home")'">Bachelor Neer</a>
                                <h4>Submit Request</h4>
                                <h5>Please provide all the necessary information below for a more efficient and effective service.</h5>
                            </div>
                            <form class="contactform" action="/AddProperty/AddPropertyDetails" method="post">

                                <div class="aa-single-field">
                                    <label for="name">Name <span class="required">*</span></label>
                                    <input type="text" required="required" aria-required="true" value="" name="up_Name">
                                    @Html.ValidationMessageFor(m => m.up_Name)
                                </div>
                                <div class="aa-single-field">
                                    <label for="email">Email <span class="required">*</span></label>
                                    <input type="email" required="required" aria-required="true" value="" name="up_Email">
                                    @Html.ValidationMessageFor(m => m.up_Email)
                                </div>
                                <div class="aa-single-field">
                                    <label for="number">Contact Number <span class="required">*</span></label>
                                    <input type="text" required="required" aria-required="true" value="" name="up_Number">
                                    @Html.ValidationMessageFor(m => m.up_Number)
                                </div>
                                <div class="aa-single-field">

                                    <label for="type">Property Type <span class="required">*</span></label>
                                    <select aria-required="true" name="up_Type">
                                        <option value="0" selected>Half Duplex</option>
                                        <option value="1">Flat</option>
                                        <option value="2">Double Room</option>
                                        <option value="3">Single Room</option>
                                        <option value="4">Duplex</option>
                                    </select>

                                </div>



                                <div class="aa-single-field">
                                    <label for="address">Property Address <span class="required">*</span></label>
                                    <input type="text" required="required" aria-required="true" value="" name="up_Proaddress" placeholder="ex. Kolabagan 2 no. Road, Dhanmondi">
                                </div>

                                <div class="aa-single-field">

                                    <label for="type"> City-Thana <span class="required">*</span></label>
                                    <select aria-required="true" name="up_Thana">
                                        <option value="0" selected>Dhanmondi</option>
                                        <option value="1">Mohakhali</option>
                                        <option value="2">Gulshan</option>
                                        <option value="3">Uttara</option>

                                    </select>

                                </div>



                                <div class="aa-single-field">
                                    <label for="number">Upload Property Image <span class="required">*</span></label>
                                    <input type="file" required="required" aria-required="true" value="" name="up_Imfile">
                                    @Html.ValidationMessageFor(m => m.up_Imfile)
                                </div>

                                <div class="aa-single-field">
                                    <label for="rent">Rent BDT <span class="required">*</span></label>
                                    <input type="text" required="required" aria-required="true" value="" name="up_Rent">
                                    @Html.ValidationMessageFor(m => m.up_Rent)
                                </div>


                                <div class="aa-single-submit">
                                    <input type="submit" value="Submit" name="Submit">
                                </div>

                                <div class="aa-single-submit">
                                    @ViewBag.message;
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="../Design/js/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="../Design/js/bootstrap.js"></script>
    <!-- slick slider -->
    <script type="text/javascript" src="../Design/js/slick.js"></script>
    <!-- Price picker slider -->
    <script type="text/javascript" src="../Design/js/nouislider.js"></script>
    <!-- mixit slider -->
    <script type="text/javascript" src="../Design/js/jquery.mixitup.js"></script>
    <!-- Add fancyBox -->
    <script type="text/javascript" src="../Design/js/jquery.fancybox.pack.js"></script>
    <!-- Custom js -->
    <script src="../Design/js/custom.js"></script>

</body>
</html>

